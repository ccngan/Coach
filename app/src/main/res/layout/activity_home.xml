<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:foregroundGravity="center"
            android:src="@drawable/front_body"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/adductorsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="154dp"
            android:layout_marginStart="59dp"
            android:text="Adductors"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="348dp" />

        <Button
            android:id="@+id/quadsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="161dp"
            android:layout_marginEnd="67dp"
            android:text="Quads"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="310dp" />

        <Button
            android:id="@+id/forearmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="178dp"
            android:text="Forearm"
            tools:layout_editor_absoluteX="255dp"
            tools:layout_editor_absoluteY="203dp" />

        <Button
            android:id="@+id/abductorsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="217dp"
            android:layout_marginEnd="40dp"
            android:text="Abductors"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="293dp" />

        <Button
            android:id="@+id/shouldersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="68dp"
            android:text="Shoulders"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="105dp" />

        <Button
            android:id="@+id/absButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="94dp"
            android:layout_marginTop="187dp"
            android:text="Abs"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/bicepsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="47dp"
            android:layout_marginTop="107dp"
            android:text="Biceps"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="168dp" />

        <Button
            android:id="@+id/chestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="123dp"
            android:text="Chest"
            tools:layout_editor_absoluteX="216dp"
            tools:layout_editor_absoluteY="120dp" />

        <Button
            android:id="@+id/obliquesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="97dp"
            android:text="Obliques"
            tools:layout_editor_absoluteX="206dp"
            tools:layout_editor_absoluteY="262dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/title_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" >

    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>